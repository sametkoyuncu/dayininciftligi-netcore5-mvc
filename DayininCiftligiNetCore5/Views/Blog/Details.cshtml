@model BlogModel
@{
    var bannerData = ViewBag.BlogPageBannerData as PageBannerModel;
}
@section Navbar
{
    @await Component.InvokeAsync("NavbarComponentOtherPages")
}
<!--================Hero Banner Area Start =================-->
<section class="hero-banner d-flex align-items-center">
    <div class="container text-center">
        <h2>@Model.Header</h2>
        <nav aria-label="breadcrumb" class="banner-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@bannerData.MasterPageUrl">@bannerData.MasterPage</a></li>
                <li class="breadcrumb-item" aria-current="page">@bannerData.ThisPage</li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Header (okunuyor..)</li>
            </ol>
        </nav>
    </div>
</section>
